package ie.gmit.sw.ai;

public class DepthLimitedSearch {
	
	private GameModel model;
	private static int limit = 30;
	private char[][] modelGrid;
	
	public DepthLimitedSearch(GameModel model) {
		this.model = model;
		this.modelGrid = model.getModel();
	}
	
	public void search(int row, int col, int depth) {				
		for (int i = row - depth; i <= row + depth; i++) {
			for (int j = col - depth; j <= col + depth; i++) {
				if (model.get(row, col) == '1') {
					System.out.println("Near player");
					return;
				} 
			}
		}
	}
}
