package ie.gmit.sw.ai;

public class Hunter implements Command {

	private GameModel model;
	private char enemyID;
	private int row, col;
	private BFS bfs;
	
	public Hunter(GameModel model, char enemyID, int row, int col) {
		this.model = model;
		this.enemyID = enemyID;
		this.row = row;
		this.col = col;
		bfs = new BFS(model);
	}
	
	@Override
	public boolean execute() {
		if (model.isTouchingCharacter('1', row, col)) {
			model.set(row, col, '\u0020');
			return false;
		}
		
		int[] pos = {row, col};
		int[] playerPos = bfs.getPlayerPos();
		int[] step = bfs.shortestPath(model.getModel(), pos, playerPos);
		
		//System.out.println("Step: " + step[0] + "," + step[1]);
		
		return true;
	}
}
