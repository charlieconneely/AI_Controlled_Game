package ie.gmit.sw.ai;

public class Chase implements Command {
	
	private GameModel model;
	private char enemyID;
	private BFS bfs;
	private int row, col;
	
	public Chase(GameModel model, char enemyID) {
		this.model = model;
		this.enemyID = enemyID;
		bfs = new BFS(model);
	}
		
	@Override
	public void execute(int r, int c) {		
		int[] start = {r, c};
		int[] dest = bfs.getPlayerPos();
		int[] prevDest = dest;
		
		int[] step = bfs.shortestPath(model.getModel(), start, dest);
		
		model.set(step[0], step[1], enemyID);
		model.set(row, col, '\u0020');
	           		
		row = step[0];
		col = step[1];
		System.out.println(row + ", " + col);
	}
}
