package ie.gmit.sw.ai;

public class Chase implements Command {
	
	private GameModel model;
	private char enemyID;
	private BFS bfs;
	private int row, col;
	
	public Chase(GameModel model, char enemyID, int row, int col) {
		this.model = model;
		this.enemyID = enemyID;
		this.row = row;
		this.col = col;
		bfs = new BFS(model);
	}
		
	@Override
	public void execute() {		
		int[] pos = {row, col};
		int[] playerPos = bfs.getPlayerPos();

		int[] step = bfs.shortestPath(model.getModel(), pos, playerPos);
		if (row == step[0] && col == step[1]) return;
		model.set(step[0], step[1], enemyID);
		model.set(row, col, '\u0020');
		
		row = step[0];
		col = step[1];
	}
}
