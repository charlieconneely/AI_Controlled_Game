package ie.gmit.sw.ai;

import java.util.ArrayList;
import java.util.List;

public class PathFinder {
	
	private List<Node> closed = new ArrayList<Node>();
	// Collections.sort(open)
	private List<Node> open = new ArrayList<Node>();
	private Node[][] nodes;
	
	public PathFinder(char[][] map) {
		initialiseNodeMap(map);
	}
	
	public Path findPath(int sr, int sc, int tr, int tc) {
		nodes[sr][sc].setCost(0);
		nodes[sr][sc].setDepth(0);
		closed.clear();
		open.clear();
		open.add(nodes[sr][sc]);
		return new Path();
	}
	
	private void initialiseNodeMap(char[][] map) {
		for (int i = 0; i < map.length; i++) {
			for (int j = 0; j < map[i].length; j++) {
				nodes[i][j] = new Node(i, j);
			}
		}
	}
	
	// calculate cost of movement from one pos to another based on heuristic
	private float getCost(int sr, int sc, int tr, int tc) {
		return 0;
	}

}
